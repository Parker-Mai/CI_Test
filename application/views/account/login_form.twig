
{% extends 'layouts/main.twig' %}

{% block content %}

<div class="col-xs-12 col-sm-7 col-md-7 col-md-offset-1 col-lg-offset-2">

    <div class="section-title clear">
      <h3>會員登入</h3>
      <span class="bar-dark"></span>
      <span class="bar-primary"></span>
    </div>

    <form id="contact-form" class="row contact-form no-gutter" action="#" method="post">

      <div class="col-xs-12 col-sm-12">
        <div class="input-field">
          <span class="input-icon" id="account_name"><i class="tf-profile-male"></i></span>
          <input type="text" class="form-control" name="account_name" id="account_name" placeholder="Enter your account" required>
        </div>
      </div>

      <div class="col-xs-12 col-sm-12">
        <div class="input-field">
          <span class="input-icon" id="account_pwd"><i class="tf-ion-ios-locked"></i></span>
          <input type="password" class="form-control" name="account_pwd" id="account_pwd" placeholder="Enter Your password" required>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <div class="input-field">
          <span class="btn-border">
            <button type="submit" class="btn btn-primary btn-custom-border text-uppercase">Login Account</button>
          </span>
        </div>
        <div class="msg-success">Your Message was sent successfully</div>
        <div class="msg-failed">Something went wrong, please try again later</div>
      </div> 

      <div class="col-xs-12 col-sm-6">
        <div class="input-field">
          <span class="btn-border">
            <a href="/accounts/edit" class="btn btn-primary btn-custom-border text-uppercase">Create Accoun</a>
          </span>
        </div>
        <div class="msg-success">Your Message was sent successfully</div>
        <div class="msg-failed">Something went wrong, please try again later</div>
      </div> 
      
    </form> 
  </div>

  {% endblock %}