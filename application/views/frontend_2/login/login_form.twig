{% extends 'frontend_2/layouts/main.twig' %}

{% block content %}
<section class="contact section" style="padding:30px 0px;">
 
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
    
          <div class="text-center mb-5 contact-title">
              <h2>會員登入</h2>
          </div>
    
          <form id="dataForm" class="contact__form mt-5" action="/main/login" method="post">
    
            <div class="form-row">
    
                <div class="col-lg-12">
                    <div class="form-group mb-3">
                        <input type="text" name="login_name" id="login_name" class="form-control" placeholder="您的帳號" required>
                    </div>
                </div>

                <div class="col-lg-12">
                  <div class="form-group mb-3">
                      <input type="password" name="login_pwd" id="login_pwd" class="form-control" placeholder="您的密碼" required>
                  </div>
              </div>

                <div class="col-lg-12">
    
                    <div class="text-center">
                        <input type="hidden" name="{{ csrfName }}" value="{{ csrfHash }}">
                        <button class="btn btn-main" type="submit">送出</button>
                        <a href="/main/members/edit" class="btn btn-main">加入會員</a>
                    </div>
                </div>

            </div>
    
          </form>
    
      </div>  
    </div>
  </div>
  
</section>


<script>

  $('#dataForm').submit(function(){
    
    if ($('#member_pwd').val() != '') {

      if ($('#member_pwd').val() != $('#member_pwd_check').val()) {

        alert('輸入密碼與確認密碼不符合。');
        return false;
      }

    }

    return true;

  });

</script>

{% endblock %}