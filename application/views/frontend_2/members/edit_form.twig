{% extends 'frontend_2/layouts/main.twig' %}

{% block content %}
<section class="contact section" style="padding:30px 0px;">
 
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
    
          <div class="text-center mb-5 contact-title">
              <h2>會員資料{{ methodTitle }}</h2>
          </div>
    
          <form id="dataForm" class="contact__form mt-5" action="{{ methodAction }}" method="post">
    
            <div class="form-row">

                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="member_name" id="member_name" value="{{ member_name }}" placeholder="您的帳號" {{ methodReadonly }} required >
                    </div>
                </div>

                <div class="col-lg-6">
                  <div class="form-group mb-3">
                      <input type="text" class="form-control" name="member_realname" id="member_realname" value="{{ member_realname }}" placeholder="您的真實姓名" required>
                  </div>
                </div>

                <div class="col-lg-6">
                  <div class="form-group mb-3">
                      <input type="password" class="form-control" name="member_pwd" id="member_pwd" placeholder="您的密碼" autocomplete="off" {{ pwdRequired }} >
                  </div>
                </div>

                <div class="col-lg-6">
                  <div class="form-group mb-3">
                      <input type="password" class="form-control" id="member_pwd_check" placeholder="密碼確認" autocomplete="off" {{ pwdRequired }} >
                  </div>
                </div>
    
                <div class="col-lg-12">
                    <div class="form-group mb-3">
                        <input type="email" name="member_email" id="member_email" value="{{ member_email }}" class="form-control" placeholder="您的電子信箱" required>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group-2 mb-4">
                        <textarea class="form-control" name="member_message" id="member_message" rows="6" placeholder="個人訊息">{{ member_message }}</textarea>
                    </div>
    
                    <div class="text-center">
                        <input type="hidden" name="{{ csrfName }}" value="{{ csrfHash }}">
                        <button class="btn btn-main" type="submit">送出</button>
                        <a href="/" class="btn btn-main">返回</a>
                    </div>
                </div>

            </div>
    
          </form>
    
      </div>  
    </div>
  </div>
  
</section>


<script>

  $('#dataForm').submit(function(){
    
    if ($('#member_pwd').val() != '') {

      if ($('#member_pwd').val() != $('#member_pwd_check').val()) {

        alert('輸入密碼與確認密碼不符合。');
        return false;
      }

    }

    return true;

  });

</script>

{% endblock %}